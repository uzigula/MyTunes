@model IEnumerable<MyTunes.Common.ViewModels.TracksListViewModel>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlbumTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlbumArtistName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumArtistName)
            </td>
            <td>
                @Ajax.ActionLink("Add", "AddTrack", "Playlist", new { playListId = item.PlayListId, trackId = item.Id }, new AjaxOptions { HttpMethod = "Post"})
            </td>
        </tr>
    }

</table>
